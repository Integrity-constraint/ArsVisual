<Window x:Class="ArsVisual.NetService.DigitalHiveLoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArsVisual.NetService"
        mc:Ignorable="d"
             Title="DigitalHiveLogin" Background="Transparent" AllowsTransparency="True" WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize" Height="200" Width="300">
    <Border MouseLeftButtonDown="Drag" BorderBrush="White" BorderThickness="1" ClipToBounds="True" Background="#FF37383A" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>

                <RowDefinition Height="*"/>

                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>


            <TextBlock 
            Name="TitleContainer" 
            Text="Digital Hive Загрузка"
            Foreground="White"
            FontWeight="Bold"
            FontSize="16"
            Margin="10,10,10,5"
            HorizontalAlignment="Center"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>

                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <Image Name="ImageControl" Grid.Column="0" Margin="10,0,0,10" Height="70"/>


            </Grid>
            <StackPanel 
            Name="ButtonContainer" 
            Grid.Row="2" 
            Orientation="Horizontal"
            HorizontalAlignment="Center" 
            Margin="10,0,10,10">

                <StackPanel.Resources>

                    <Style TargetType="Button">
                        <Setter Property="MinHeight" Value="25"/>
                        <Setter Property="MinWidth" Value="75"/>
                        <Setter Property="Margin" Value="10,0,0,0"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border 
                    x:Name="border"
                    CornerRadius="10"  
                                        Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Width="{TemplateBinding Width}"
                    Height="{TemplateBinding Height}"
                    MinWidth="{TemplateBinding MinWidth}"
                    MinHeight="{TemplateBinding MinHeight}">
                                        <ContentPresenter 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Setter Property="Background" Value="#0078D7"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>

                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
            <Button Style="{StaticResource ToolBarButtonBaseStyle}" Foreground="White" Content="Сохранить" Click="SaveToCloud" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" Grid.Row="1" Width="88"/>
            <Button Style="{StaticResource ToolBarButtonBaseStyle}" Foreground="White" Content="Отмена" Click="Cancel" HorizontalAlignment="Left" Margin="200,109,0,0" VerticalAlignment="Top" Grid.Row="1" Width="88"/>
            <PasswordBox Name="PassBox" HorizontalAlignment="Center" Margin="0,63,0,0" Grid.Row="1"  ToolTip="Пароль" VerticalAlignment="Top" Width="278"/>
           
            <TextBox Name="EmailBox" HorizontalAlignment="Center" Margin="0,40,0,0" Grid.Row="1" TextWrapping="Wrap" ToolTip="Email"  VerticalAlignment="Top" Width="278"/>
          
            <TextBox Name="NameBox" HorizontalAlignment="Center" Margin="0,86,0,0" Grid.Row="1" TextWrapping="Wrap" ToolTip="Имя файла" VerticalAlignment="Top" Width="278"/>
        </Grid>
    </Border>
</Window>
