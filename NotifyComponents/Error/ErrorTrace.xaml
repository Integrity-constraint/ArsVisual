<Window x:Class="ArsVisual.NotifyComponents.Error.ErrorTrace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArsVisual.NotifyComponents.Error"
        mc:Ignorable="d"
        Title="ErrorTrace" Height="450"  Width="400" WindowStyle="None">
    <Grid MouseLeftButtonDown="MouseLeftButtonDown">
        <TextBlock FontSize="30" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="49" Width="280">
            Произошла ошибка
        </TextBlock>
        <ScrollViewer Margin="10,104,10,104">
            <TextBlock  >

            </TextBlock>
        </ScrollViewer>
        <Image HorizontalAlignment="Right"
           VerticalAlignment="Top"
           Width="45"
           Height="34"
           Source="/icons/close.png"
           Stretch="Fill"
           Opacity="0.4"
           ToolTip="Закрыть окно ошибки"
           x:Name="imgClose"
           MouseDown="imgClose_MouseDown" Margin="0,5,10,0" />
    </Grid>
</Window>
