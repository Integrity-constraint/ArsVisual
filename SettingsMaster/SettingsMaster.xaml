<Window x:Class="ArsVisual.SettingsMaster.SettingsMaster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArsVisual.SettingsMaster"
        
        mc:Ignorable="d"
        Title="SettingsMaster" WindowStyle="None" Height="450" Width="600">
    
   
    <Grid Background="Transparent" >
        
            
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="150*"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel MouseLeftButtonDown="Drag" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Border>
                <TextBlock Margin="5,0,0,0">Мастер настроек</TextBlock>
            </Border>
          
           
        </StackPanel>
        <StackPanel MouseDown="Drag" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Click="closesettings" BorderBrush="Transparent" Background="Transparent">
                <Button.Content>
                    <Image Source="/icons/close.png"></Image>
                </Button.Content>
            </Button>
           
        </StackPanel>
        <GroupBox Grid.Row="1" Header="Параметры">
            <TreeView >
           
                
           
            <TreeViewItem Header="Общее">
                <TreeViewItem Selected="Palitra" Header="Цвета">
                    
                </TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Обновления">
                
            </TreeViewItem>
                <TreeViewItem Header="Справка">

                </TreeViewItem>
            </TreeView>
        </GroupBox>
        <Frame Name="OCHKO" Grid.Row="1" Grid.Column="1">
            
        </Frame>
    </Grid>
    
</Window>
