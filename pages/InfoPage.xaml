<Page x:Class="ArsVisual.pages.InfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArsVisual.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="550"
  Title="ColorChanger">

    <Grid >
        <Border Background="Gray" CornerRadius="15">
            <Border CornerRadius="10,10,10,10" Height="auto" Background="#FF2D2C2C" Margin="10"  VerticalAlignment="Top">
                <StackPanel>
                    <Border Background="Black" CornerRadius="10,10,0,0" Height="30">
                        <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontFamily="Century Gothic" FontSize="16">
                    Справка
                        </TextBlock>

                    </Border>
                    <StackPanel >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White" FontFamily="Century Gothic" FontSize="18">
                            ArsVisual
                            </TextBlock>
                            <Image Margin="4" Height="30" Width="30" Source="/icons/logo.png">
                                
                            </Image>
                        </StackPanel>
                        <StackPanel >
                            <TextBlock TextWrapping="Wrap" Margin="10" Cursor="Hand"  VerticalAlignment="Center" Foreground="White" FontFamily="Century Gothic" FontSize="18">
                              Приложение позволяет визуализировать рабоиче процессы, алгоритмы, создавать различные схемы и интеллект карты
                            </TextBlock>
                           
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>


    </Grid>
</Page>
