<Page x:Class="ArsVisual.pages.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArsVisual.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="550"
      Title="UpdatePage"  >

    <Grid >
        <Border Background="Gray" CornerRadius="15">
            <Border CornerRadius="10,10,10,10"  Background="#FF2D2C2C" Margin="10" Height="100" VerticalAlignment="Top">
                <StackPanel>
                    <Border Background="Black" CornerRadius="10,10,0,0" Height="30">
                        <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontFamily="Century Gothic" FontSize="16">
                            Проверка обновлений
                        </TextBlock>
                    </Border>
                    <TextBlock Margin="10" Foreground="White" Name="Verstext" FontFamily="Century Gothic">
                        
                    </TextBlock>
                    <Button Style="{StaticResource TextButtonStyle}" Click="CheckUpdates" Margin="10,0,0,0" HorizontalAlignment="Left" BorderBrush="Transparent" Foreground="White" Background="Transparent" FontFamily="Century Gothic">
                        Проверить обновления
                    </Button>
                </StackPanel>
            </Border>
        </Border>
       
       
    </Grid>
</Page>
