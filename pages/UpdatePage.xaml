<Page x:Class="ArsVisual.pages.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArsVisual.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="550"
      Title="UpdatePage">

    <Grid >
       
       
        <GroupBox Header="Информация по обновлениям" >
            <Grid>
                <StackPanel>
                    <GroupBox   Header="Проверка обновлений">
                        <StackPanel Orientation="Horizontal">
                            <GroupItem Margin="10">
                                <TextBlock Name="Verstext"></TextBlock>

                            </GroupItem>
                            <GroupItem HorizontalAlignment="Right" Margin="10">
                                <Button Style="{StaticResource ToolBarButtonBaseStyle}">проверить обновления</Button>
                            </GroupItem>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
